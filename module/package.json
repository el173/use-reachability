{
  "name": "@el173/use-reachability",
  "version": "1.0.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A universal React/React Native/Next.js hook for monitoring backend reachability via health check endpoints.",
  "main": "dist/index.js",
